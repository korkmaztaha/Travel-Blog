@using MVC_TravelTrip.Models.Siniflar
@model List<Blog>
    <div class="con-bot">
        @foreach (var x in Model)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@x.BlogImage" style="width:540px; height:140px;" alt="" />
                </div>
                <div class="left-text">
                    <h4>@x.Baslik</h4>
                    <span class="doller">@x.Tarih.ToShortDateString()</span>
                    <p>@x.Aciklama.Substring(0,100)</p>
                    <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını oku</span></a></p>
                </div>
            </div>
        }


