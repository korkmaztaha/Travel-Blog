@model MVC_TravelTrip.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "yorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2> Yorum Güncelle</h2>
<br />

@*/Begin formun altında bulunan kodlar bloggüncelle ActionResult çalışınca çalışacak ActionREsutl Admin içersinde bloggüncelle form post olduğunda çalışacak*@
@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.KullainiciAdi)
    @Html.TextBoxFor(x => x.KullainiciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum,15,1, new { @class = "form-control" })
    <br />
   

    <button class="btn btn-success">Kaydet</button>
}




